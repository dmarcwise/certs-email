generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Timestamptz
  email     String   @unique
  confirmed Boolean

  confirmToken          String?   @unique
  confirmTokenExpiresAt DateTime? @db.Timestamptz
  settingsToken         String    @unique

  sendHeartbeatReport  Boolean
  sendCertChangeAlerts Boolean   @default(true)
  lastHeartbeatSentAt  DateTime? @db.Timestamptz

  domains Domain[]

  @@map("users")
}

model Domain {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  name                     String
  port                     Int?
  confirmed                Boolean      @default(false)
  createdAt                DateTime     @default(now()) @db.Timestamptz
  lastCheckedAt            DateTime?    @db.Timestamptz
  lastNotifiedAt           DateTime?    @db.Timestamptz
  lastCertChangeNotifiedAt DateTime?    @db.Timestamptz
  notBefore                DateTime?    @db.Timestamptz
  notAfter                 DateTime?    @db.Timestamptz
  status                   DomainStatus
  error                    String?
  errorStartedAt           DateTime?    @db.Timestamptz

  issuer      String?
  cn          String? // Common Name
  san         String[] // Subject Alternative Names
  serial      String?
  fingerprint String? // SHA256
  ip          String?

  checks Check[]

  @@unique([userId, name, port])
  @@map("domains")
}

enum DomainStatus {
  PENDING
  OK
  EXPIRING_30DAYS
  EXPIRING_14DAYS
  EXPIRING_7DAYS
  EXPIRING_1DAY
  EXPIRED

  @@map("domain_status")
}

model Check {
  id Int @id @default(autoincrement())

  domainId Int
  domain   Domain @relation(fields: [domainId], references: [id], onDelete: Cascade)

  checkedAt DateTime @default(now()) @db.Timestamptz
  error     String?

  notBefore   DateTime? @db.Timestamptz
  notAfter    DateTime? @db.Timestamptz
  issuer      String?
  cn          String? // Common Name
  san         String[] // Subject Alternative Names
  serial      String?
  fingerprint String? // SHA256
  ip          String?

  @@map("checks")
}

enum EmailOutboxStatus {
  Pending
  Completed
  Failed

  @@map("email_outbox_status")
}

model EmailOutbox {
  id Int @id @default(autoincrement())

  createdAt      DateTime          @default(now()) @db.Timestamptz
  sendAfter      DateTime?         @db.Timestamptz
  completedAt    DateTime?         @db.Timestamptz
  status         EmailOutboxStatus @default(Pending)
  failedAttempts Int               @default(0)
  retryAfter     DateTime?         @db.Timestamptz
  priority       Int

  recipients   String[]
  replyTo      String?
  subject      String
  body         String
  templateName String?

  @@map("email_outbox")
}
